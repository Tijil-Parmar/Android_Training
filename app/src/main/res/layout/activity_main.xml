<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        tools:context="com.example.StudyGoals.MainActivity">

        <View
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#BFBFBF"
            android:outlineSpotShadowColor="#BFBFBF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enableNotificationSwitch"
            app:layout_constraintVertical_bias="0.329" />

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#BFBFBF"
            android:outlineSpotShadowColor="#BFBFBF"
            app:layout_constraintBottom_toTopOf="@+id/numberOfMinutesTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numberOfQuestionsSeekbar"
            app:layout_constraintVertical_bias="0.666" />

        <TextView
            android:id="@+id/examDateTextView"
            android:layout_width="392dp"
            android:layout_height="38dp"
            android:fontFamily="@font/helvetica"
            android:gravity="center"
            android:text="@string/textViewDate"
            android:textColor="#4f6c8d"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <TextView
            android:id="@+id/numberOfQuestionsTextView"
            android:layout_width="387dp"
            android:layout_height="46dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/helvetica"
            android:lineSpacingExtra="8sp"
            android:text="@string/questionsPerDayTextView"
            android:textColor="#4f6c8d"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setDateTV"
            app:layout_constraintVertical_bias="0.092" />

        <TextView
            android:id="@+id/numberOfMinutesTextView"
            android:layout_width="385dp"
            android:layout_height="24dp"
            android:layout_marginTop="72dp"
            android:fontFamily="@font/helvetica"
            android:text="@string/minutesPerDay"
            android:textColor="#4f6c8d"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/enableNotificationSwitch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numberOfQuestionsTextView"
            app:layout_constraintVertical_bias="0.126" />

        <Switch
            android:id="@+id/enableNotificationSwitch"
            android:layout_width="391dp"
            android:layout_height="51dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/helvetica"
            android:text="@string/enableReminderNotifications"
            android:textColor="#4f6c8d"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.56"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <View
            android:id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#BFBFBF"
            android:outlineSpotShadowColor="#BFBFBF"
            app:layout_constraintBottom_toTopOf="@+id/numberOfQuestionsTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setDateTV" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reviewProgressButton"
            android:layout_width="180dp"
            android:layout_height="51dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/helvetica"
            android:textAlignment="center"
            android:text="@string/reviewProgress"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#4f6c8d"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enableNotificationSwitch"
            app:strokeColor="#AAAAAA"
            app:strokeWidth="0.7dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/getStartedButton"
            android:layout_width="180dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="200dp"
            app:strokeWidth="0.7dp"
            android:backgroundTint="@color/white"
            app:strokeColor="#AAAAAA"
            android:fontFamily="@font/helvetica"
            android:textAlignment="center"
            android:text="@string/get_started"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#4f6c8d"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/reviewProgressButton"
            app:layout_constraintTop_toBottomOf="@+id/enableNotificationSwitch"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/setReminderTimeTextView"
            android:layout_width="211dp"
            android:layout_height="35dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/helvetica"
            android:gravity="center_vertical"
            android:text="@string/daily_reminder_time"
            android:textColor="#4f6c8d"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enableNotificationSwitch" />

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#BFBFBF"
            android:clickable="false"
            android:outlineSpotShadowColor="#BFBFBF"
            app:layout_constraintBottom_toTopOf="@+id/enableNotificationSwitch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/enableNotificationSwitch"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/numberOfQuestionsSeekBar"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/numberOfQuestionsSeekbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/numberOfQuestionsSeekbar"
            app:layout_constraintTop_toBottomOf="@+id/numberOfQuestionsTextView"
            app:layout_constraintVertical_bias="1.0" />

        <SeekBar
            android:id="@+id/numberOfQuestionsSeekbar"
            android:layout_width="337dp"
            android:layout_height="30dp"
            android:elevation="@dimen/cardview_compat_inset_shadow"
            android:progress="20"
            android:min="20"
            android:theme="@style/SeekBarColor"
            android:thumbTint="#4f6c8d"
            app:layout_constraintBottom_toTopOf="@+id/numberOfMinutesTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numberOfQuestionsTextView"
            app:layout_constraintVertical_bias="0.411" />

        <TextView
            android:id="@+id/setDateTV"
            android:layout_width="221dp"
            android:layout_height="35dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/textviewborder"
            android:gravity="center"
            android:text="Set Date"
            android:textAlignment="center"
            android:textColor="#4f6c8d"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/examDateTextView" />

        <TextView
            android:id="@+id/setDurationTV"
            android:layout_width="221dp"
            android:layout_height="35dp"
            android:background="@drawable/textviewborder"
            android:gravity="center"
            android:text="30 Mins"
            android:textAlignment="center"
            android:textColor="#4f6c8d"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numberOfMinutesTextView" />

        <TextView
            android:id="@+id/setTimeTV"
            android:layout_width="154dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/textviewborder"
            android:gravity="center"
            android:text="Set Time"
            android:textAlignment="center"
            android:textColor="#4f6c8d"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/getStartedButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/setReminderTimeTextView"
            app:layout_constraintTop_toBottomOf="@+id/enableNotificationSwitch"
            app:layout_constraintVertical_bias="0.055" />

<!--        <Button-->
<!--            android:id="@+id/button"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Button"-->
<!--            app:layout_constraintBottom_toTopOf="@+id/reviewProgressButton"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="@+id/view3" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>