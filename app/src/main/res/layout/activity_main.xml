<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#BFBFBF"
        android:outlineSpotShadowColor="#BFBFBF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1"
        app:layout_constraintVertical_bias="0.234" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#BFBFBF"
        android:outlineSpotShadowColor="#BFBFBF"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="382dp"
        android:layout_height="43dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:stepSize="1"
        android:value="212"
        android:valueFrom="100"
        app:trackColorActive="#B3B3B3"
        app:trackColorInactive="@color/white"
        app:trackHeight="2dp"
        android:valueTo="300"
        app:haloColor="#a1a1a1"
        app:haloRadius="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.378"
        app:thumbColor="#FFFFFF"
        app:thumbElevation="@dimen/cardview_compat_inset_shadow"
        app:trackColor="#B3B3B3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="344dp"
        android:layout_height="35dp"
        android:fontFamily="@font/helvetica"
        android:text="When do you plan to take your NCLEX exam?"
        android:textColor="#4f6c8d"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="383dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/helvetica"
        android:text="How many questions would you like to attempt per day? We recommend 212 questions per day."
        android:textColor="#4f6c8d"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setDate" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="385dp"
        android:layout_height="24dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/helvetica"
        android:text="How many minutes would you like to study per day?"
        android:textColor="#4f6c8d"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/switch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.126" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="365dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/helvetica"
        android:text="Enable reminder notifications"
        android:textColor="#4f6c8d"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.528" />

    <Button
        android:id="@+id/setDate"
        android:layout_width="199dp"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/helvetica"
        android:text="Set date"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#949494"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <View
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="1dp"
        android:background="#BFBFBF"
        android:outlineSpotShadowColor="#BFBFBF"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setDate" />

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/button_border"
        android:backgroundTint="#f1f1f1"
        android:fontFamily="@font/helvetica"
        android:text="Review Progress"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#949494"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/button_border"
        android:backgroundTint="#f1f1f1"
        android:fontFamily="@font/helvetica"
        android:text="Get Started"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#949494"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/switch1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="211dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:text="Daily reminder time :"
        android:textColor="#4f6c8d"
        android:fontFamily="@font/helvetica"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#BFBFBF"
        android:layout_marginTop="10dp"
        android:outlineSpotShadowColor="#BFBFBF"
        app:layout_constraintBottom_toTopOf="@+id/switch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="false"
        app:layout_constraintTop_toBottomOf="@+id/setDuration"
        app:layout_constraintVertical_bias="0.648" />

    <Button
        android:id="@+id/setTime"
        android:layout_width="123dp"
        android:clickable="false"
        android:layout_height="42dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/button_border"
        android:backgroundTint="#f1f1f1"
        android:fontFamily="@font/helvetica"
        android:enabled="false"
        android:text="Set time"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#949494"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView6" />

    <Button
        android:id="@+id/setDuration"
        android:layout_width="204dp"
        android:layout_height="42dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/helvetica"
        android:text="01 Hr 30 Mins"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#949494"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/switch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.338" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>